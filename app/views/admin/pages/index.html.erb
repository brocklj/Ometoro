<%= render 'admin/menu' %>
<section>
  <div class="rec dash-big">

  <%= link_to 'New page', new_admin_page_path %>
  <table>
    <tr>
      <th>Title</th>
      <th>Text</th>
    </tr>

    <% @pages.each do |page| %>
        <tr>
          <td><%= page.title %></td>
          <td><%= page.text %></td>
          <td><%= link_to 'Show', page_path(page) %></td>
          <td><%= link_to 'Edit', edit_admin_page_path(page) %></td>
          <td><%= link_to 'Delete', admin_page_path(page), method: :delete, data: { confirm: "Sure?"} %></td>

        </tr>

    <% end %>
    </table>

  </div>

</section>