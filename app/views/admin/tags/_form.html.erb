<%= simple_form_for([:admin,@tag]) do |f| %>
    <%= f.hidden_field :page_id, :value => params[:page_id] %>
    <%= f.hidden_field :course_id, :value => params[:course_id] %>

    <% if @tag.errors.any? %>
        <div id="error_explanation">
          <h2>
            <%= pluralize(@tag.errors.count, "error") %> prohibited
            this tag from being saved:
          </h2>
          <ul>
            <% @tag.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <p>
      <%= f.label :name %><br>
      <%= f.text_field :name %>
    </p>

    <p>
      <%= f.submit %>
    </p>
<% end %>