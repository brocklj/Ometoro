<%= render 'layouts/menu' %>
<section>
  <div class="row">
    <div class="rec rec-big">
      <article>
        <h1><%= @course.Name %></h1>
        <p>
          <%= @course.body %>
          <% if @course.tags.any? %>
            <div class="tags">
            <h3>Tags:</h3>
            <ul>
              <% @course.tags.each do |tag| %>
                  <li><%= tag.name %></li>
              <% end %>
            </ul>
            </div>
        <% end %>
        </p>
      </article>
    </div>
  </div>
</section>
