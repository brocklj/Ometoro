<h1>List of pages</h1>
<%= link_to 'New page', new_page_path %>
<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
  </tr>

  <% @pages.each do |page| %>
      <tr>
        <td><%= page.title %></td>
        <td><%= page.text %></td>
        <td><%= link_to 'Show', page_path(page) %></td>
        <td><%= link_to 'Edit', edit_page_path(page) %></td>
      </tr>
  <% end %>
</table>