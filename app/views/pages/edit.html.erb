<%= form_for :page, url: page_path(@page), method: :patch do |f| %>

    <% if @page.errors.any? %>
        <div id="error_explanation">
          <h2>
            <%= pluralize(@page.errors.count, "error") %> prohibited
            this article from being saved:
          </h2>
          <ul>
            <% @page.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
